{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "Number of Hospital Beds by State in Malaysia", 
    "params": [
        {
            "name": "year_selection",
            "value": 2022,
            "bind": {
                "input": "range",
                "min": 2015,
                "max": 2022,
                "step": 1
            }
        }
    ],  
    "data": {
        "url": "hospital_beds.csv"
    },
    "transform":[
        {"filter": "year(datum.date) == year_selection"}
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "state",
            "type": "nominal",
            "axis": {"title": "State"}
        },
        "y": {
            "field": "beds",
            "type": "quantitative",
            "axis": {"title": "Number of Beds"}
        },
        "color": {
            "field": "type",
            "type": "nominal",
            "scale": {
                "domain": ["hospital_moh", "hospital_non_moh", "special_medical_institution"],
                "range": ["#1f77b4", "#ff7f0e", "#2ca02c"]
            },
            "title": "Type of Hospital"
        },
        "tooltip": [
            {"field": "state", "type": "nominal", "title": "State"},
            {"field": "beds", "type": "quantitative", "title": "Number of Beds"},
            {"field": "type", "type": "nominal", "title": "Type of Hospital"}
        ]
    }
}