{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 650,
    "height": 400,
    "params": [
        {
            "name": "year_selection",
            "value": 2024,
            "bind": {
                "input": "range",
                "min": 2006,
                "max": 2024,
                "step": 1,
                "name": "Select a Year: "
            }
        }
    ],  
    "data": {
        "url": "https://raw.githubusercontent.com/rpra-hul/fit3179-data-vis-2/refs/heads/master/data/annual_blood_donations.csv"
    },
    "transform":[
        {"filter": "datum.year == year_selection"},
        {"filter": "datum.blood_type != 'all'"},
        {"filter": "datum.donations > 0"},
        {
            "lookup": "blood_type",
            "from": {
                "data": {
                    "values": [
                        {"blood_type": "a", "full_name": "A"},
                        {"blood_type": "ab", "full_name": "AB"},
                        {"blood_type": "b", "full_name": "B"},
                        {"blood_type": "o", "full_name": "O"}
                    ]
                },
                "key": "blood_type",
                "fields": ["full_name"]
            }
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "state",
            "type": "nominal",
            "axis": {"title": "State"}
        },
        "y": {
            "aggregate": "sum",
            "field": "donations",
            "type": "quantitative",
            "axis": {"title": "Population (%)"},
            "stack": "normalize"
        },
        "color": {
            "field": "full_name",
            "type": "nominal",
            "title": "Blood Type",
            "legend": {
                        "title": "Blood Type",
                        "orient": "right",
                        "labelFontSize": 12,
                        "titleFontSize": 14,
                        "titleFontWeight": "bold"
                    }
        },
        "tooltip": [
            {"field": "state", "type": "nominal", "title": "State"},
            {"field": "full_name", "type": "nominal", "title": "Blood Type"},
            {"field": "donations", "type": "quantitative", "title": "Number of Donations"}
        ]
    }
}