{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Lollipop chart showing the number of companies per state",
    "width": 800,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/rpra-hul/fit3179-data-vis-2/refs/heads/master/data/pharmaceutical_manufacturers.csv"
    },
    "transform": [
      {
        "aggregate": [{"op": "count", "as": "Number"}],
        "groupby": ["state"]
      },
      {
        "window": [{"op": "rank", "as": "rank"}],
        "sort": [{"field": "Number", "order": "descending"}]
      },
      {
        "calculate": "datum.state + ' has the most pharmaceutical '",
        "as": "annotation1"
      },
      {
        "calculate": "'manufacturers with ' + datum.Number + ' companies.'",
        "as": "annotation2"
      }
    ],
    "layer": [
      {
        "description": "Lollipop Stick",
        "mark": {"type": "bar", "size": 5},
        "encoding": {
          "x": {
            "field": "Number",
            "type": "quantitative"
          },
          "y": {
            "field": "state",
            "type": "ordinal"
          },
          "color": {
            "field": "state",
            "type": "nominal",
            "legend": {"title": "State","labelFontSize": 12, "titleFontSize": 14, "titleFontWeight": "bold"},
            "scale": {"range":["#ffe119", "#4363d8", "#f58231", "#42d4f4", "#f032e6", "#fabed4", "#469990", "#dcbeff", "#9A6324", "#911eb4", "#800000", "#808000", "#000075"]}
          },
          "tooltip": [
                {"field": "state", "type": "nominal", "title": "State"},
                {"field": "Number", "type": "quantitative", "title": "Total Pharmaceutical Manufacturers"}
            ]
        }
      },
      {
        "description": "Lollipop",
        "mark": {
          "type": "circle",
          "tooltip": true,
          "size": 400
        },
        "encoding": {
          "color": {
            "field": "state",
            "type": "nominal"
          },
          "x": {
            "field": "Number",
            "type": "quantitative",
            "title": "Number of Pharmaceutical Manufacturers"
          },
          "y": {
            "field": "state",
            "type": "ordinal",
            "title": "State"
          },
          "tooltip": [
                {"field": "state", "type": "nominal", "title": "State "},
                {"field": "Number", "type": "quantitative", "title": "Total Pharmaceutical Manufacturers"}
            ]
        }
      },
      {
        "description": "Value label line 1",
        "transform": [
          {"filter": "datum.rank == 1"}
        ],
        "mark": {
          "type": "text",
          "baseline": "top",
          "dy": -40
        },
        "encoding": {
          "color": {
            "value": "Black"
          },
          "x": {
            "field": "Number",
            "type": "quantitative"
          },
          "y": {
            "field": "state",
            "type": "ordinal"
          },
          "text": {
            "field": "annotation1"
          }
        }
      },
      {
        "description": "Value label line 2",
        "transform": [
          {"filter": "datum.rank == 1"}
        ],
        "mark": {
          "type": "text",
          "baseline": "top",
          "dy": -25
        },
        "encoding": {
          "color": {
            "value": "Black"
          },
          "x": {
            "field": "Number",
            "type": "quantitative"
          },
          "y": {
            "field": "state",
            "type": "ordinal"
          },
          "text": {
            "field": "annotation2"
          }
        }
      }
    ]
}