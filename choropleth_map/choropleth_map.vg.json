{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "healthcare staff by state in Malaysia",
    "projection": {"type": "equalEarth"},
    "params":[
        {
            "name": "year_selection",
            "value": 2022,
            "bind":{
                "input": "range",
                "min": 2014,
                "max": 2022,
                "step": 1,
                "name": "Select Year: " 
            }
        },
        {
            "name": "type_selection",
            "value": "all",
            "bind":{
                "input": "select",
                "options": ["all", "dentist", "doctor", "nurse", "nurse_community"],
                "name": "Select type: "
            }
        }
    ],
    "layer":[
        {
            "data":{
                "url": "healthcare_staff.csv"
            },
            "transform": [
                {
                    "lookup": "state",
                    "from":{
                        "data": {
                            "url": "gadm41_MYS_1.json",
                            "format": {
                                "type": "topojson",
                                "feature": "gadm41_MYS_1"
                            }
                        },
                        "key": "properties.NAME_1"
                    },
                    "as": "geo"
                },
                {"filter": "datum.type == type_selection"},
                {"filter": "year(datum.date) == year_selection"}
            ],
            "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
            "encoding": {
                "shape": {
                    "field": "geo",
                    "type": "geojson"
                },
                "color":{
                    "field": "staff",
                    "type": "quantitative",
                    "scale": {
                        "domain": [1, 30000],
                        "scheme": "reds"
                    }
                },
                "tooltip": [
                    {"field": "state", "type": "nominal", "title": "State"},
                    {"field": "staff", "type": "quantitative", "title": "Number of staff"},
                    {"field": "date", "type": "ordinal", "title": "Year"}
                ]
            }
        }
    ]

}